{
  "version": 6,
  "configurePresets":[
    {
      "name": "x64",
      "displayName": "x64 Config",
      "binaryDir": "${sourceDir}/build/x64"
    },
    {
      "name": "x86",
      "displayName": "x86 Config",
      "architecture": {
        "value": "win32"
      },
      "binaryDir": "${sourceDir}/build/x86"
    }
  ],

  "buildPresets":[
    {
      "name": "debug_x64",
      "configurePreset": "x64",
      "configuration": "Debug"
    },
    {
      "name": "release_x64",
      "configurePreset": "x64",
      "configuration": "Release"
    },
    {
      "name": "debug_x86",
      "configurePreset": "x86",
      "configuration": "Debug"
    },
    {
      "name": "release_x86",
      "configurePreset": "x86",
      "configuration": "Release"
    }
  ],

  "workflowPresets":[
    {
      "name": "x64",
      "steps": [
        {
          "type": "configure",
          "name": "x64"
        },
        {
          "type": "build",
          "name": "debug_x64"
        },
        {
          "type": "build",
          "name": "release_x64"
        }
      ]
    },
    {
      "name": "x86",
      "steps": [
        {
          "type": "configure",
          "name": "x86"
        },
        {
          "type": "build",
          "name": "debug_x86"
        },
        {
          "type": "build",
          "name": "release_x86"
        }
      ]
    }
  ]
}